
import re
text = ''' Follow our leader Elon musk on twitter here: https://twitter.com/elonmusk, more
information on Tesla's products can be found at https://www.tesla.com/. Also here are leading
influencers for tesla related news,
https://twitter.com/teslarati
https://twitter.com/dummy_tesla
https://twitter.com/dummy_2_tesla
'''

pattern = 'https://twitter\.com/([a-zA-Z0-9_]+)'
re.findall(pattern, text)



import nltk
from nltk import word_tokenize
#Input data
text=""" There is a man on the hill, and I watched him with my telescope. There is a man on the hill, and he has a telescope. Iâ€™m on a hill, and I saw a man using my telescope."""
#word Tokenize
words=word_tokenize(text)
print(len(words))
print(words)

from nltk.corpus import stopwords
Stopwords=stopwords.words("english")
print(Stopwords)
#removal of punctuation
word_no_pun=[]
for w in words:
  if w.isalpha():
    word_no_pun.append(w.lower())
print(word_no_pun)
print(len(word_no_pun))

